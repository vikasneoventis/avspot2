<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../lib/internal/Magento/Framework/Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::marketing">
                        <resource id="Aheadworks_Followupemail::home" title="Followupemail by aheadWorks" sortOrder="0">
                            <resource id="Aheadworks_Followupemail::home_events" title="Events" sortOrder="0"/>
                            <resource id="Aheadworks_Followupemail::home_actions_edit" title="Edit Event" sortOrder="1"/>
                            <resource id="Aheadworks_Followupemail::mail_log" title="Mail Log" sortOrder="2"/>
                            <resource id="Aheadworks_Followupemail::mail_log_actions" title="Send, Delete, Preview Emails" sortOrder="3"/>
                        </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Aheadworks_Followupemail::config_followupemail" title="Followupemail by aheadWorks" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
