<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="adminhtml.amasty.finder.finder.import.log.grid.container">
            <block class="Amasty\Finder\Block\Adminhtml\Finder\Edit\Tab\Import\Grid" name="adminhtml.amasty.finder.finder.import.log.grid" as="grid">
                <arguments>
                    <argument name="id" xsi:type="string">amasty_finder_finder_import_log_grid</argument>
                    <argument name="default_sort" xsi:type="string">file_id</argument>
                    <argument name="default_dir" xsi:type="string">DESC</argument>
                    <argument name="use_ajax" xsi:type="string">1</argument>
                    <argument name="save_parameters_in_session" xsi:type="string">1</argument>
                    <argument name="grid_url" xsi:type="url" path="*/*/importLogGrid">
                        <param name="_current">1</param>
                    </argument>
                    <argument name="filter" xsi:type="string">0</argument>
                </arguments>
                <block class="Magento\Backend\Block\Widget\Grid\Massaction" name="adminhtml.amasty.finder.finder.import.log.grid.massaction" as="grid.massaction">
                    <arguments>
                        <argument name="massaction_id_field" xsi:type="string">file_id</argument>
                        <argument name="form_field_name" xsi:type="string">file_ids</argument>
                        <argument name="use_select_all" xsi:type="string">1</argument>
                        <argument name="options" xsi:type="array">
                            <item name="delete" xsi:type="array">
                                <item name="label" xsi:type="string" translate="true">Delete</item>
                                <item name="url" xsi:type="url" path="*/*/massDeleteFiles">
                                    <param name="_current">1</param>
                                </item>
                                <item name="confirm" xsi:type="string" translate="true">Are you sure you want to delete the selected file(s)?</item>
                            </item>
                        </argument>
                    </arguments>
                </block>
                <block class="Magento\Backend\Block\Widget\Grid\ColumnSet" as="grid.columnSet" name="adminhtml.amasty.finder.finder.import.log.grid.columnSet">
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="file_name">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Files are sorted by priority</argument>
                            <argument name="index" xsi:type="string">file_name</argument>
                            <argument name="filter" xsi:type="string">0</argument>
                            <argument name="sortable" xsi:type="string">0</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="file_path">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Path</argument>
                            <argument name="getter" xsi:type="string">getFilePath</argument>
                            <argument name="filter" xsi:type="string">0</argument>
                            <argument name="sortable" xsi:type="string">0</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="state">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">State</argument>
                            <argument name="getter" xsi:type="string">getState</argument>
                            <argument name="filter" xsi:type="string">0</argument>
                            <argument name="sortable" xsi:type="string">0</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="count_errors">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Errors</argument>
                            <argument name="index" xsi:type="string">count_errors</argument>
                            <argument name="renderer" xsi:type="string">Amasty\Finder\Block\Adminhtml\Finder\Edit\Tab\Import\Renderer\ImportErrors</argument>
                            <argument name="filter" xsi:type="string">0</argument>
                            <argument name="sortable" xsi:type="string">0</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="mode">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Mode</argument>
                            <argument name="getter" xsi:type="string">getMode</argument>
                            <argument name="filter" xsi:type="string">0</argument>
                            <argument name="sortable" xsi:type="string">0</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="run">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Run</argument>
                            <argument name="renderer" xsi:type="string">Amasty\Finder\Block\Adminhtml\Finder\Edit\Tab\Import\Renderer\RunButton</argument>
                            <argument name="filter" xsi:type="string">0</argument>
                            <argument name="sortable" xsi:type="string">0</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="action">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Action</argument>
                            <argument name="type" xsi:type="string">action</argument>
                            <argument name="filter" xsi:type="string">0</argument>
                            <argument name="sortable" xsi:type="string">0</argument>
                            <argument name="getter" xsi:type="string">getId</argument>
                            <argument name="actions" xsi:type="array">
                                <item name="edit" xsi:type="array">
                                    <item name="caption" xsi:type="string" translate="true">Delete</item>
                                    <item name="url" xsi:type="array">
                                        <item name="base" xsi:type="string">*/finder/deleteFile</item>
                                    </item>
                                    <item name="field" xsi:type="string">file_id</item>
                                    <item name="confirm" xsi:type="string" translate="true">Are you sure?</item>
                                </item>
                            </argument>
                        </arguments>
                    </block>
                </block>
            </block>
        </referenceBlock>
    </body>
</page>
