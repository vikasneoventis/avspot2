<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="amasty_finder_finder_edit_tab_products">
            <block class="Amasty\Finder\Block\Adminhtml\Finder\Edit\Tab\Products\Grid" name="adminhtml.amasty.finder.finder.products.grid" as="grid">
                <arguments>
                    <argument name="id" xsi:type="string">amasty_finder_finder_products_grid</argument>
                    <argument name="use_ajax" xsi:type="string">1</argument>
                    <argument name="grid_url" xsi:type="url" path="*/*/grid">
                        <param name="_current">1</param>
                    </argument>
                    <argument name="save_parameters_in_session" xsi:type="string">1</argument>
                </arguments>
                <block class="Magento\Backend\Block\Widget\Grid\Export" name="adminhtml.amasty.finder.finder.products.grid.export" as="grid.export">
                    <arguments>
                        <argument name="exportTypes" xsi:type="array">
                            <item name="csv" xsi:type="array">
                                <item name="urlPath" xsi:type="string">*/*/exportCsv</item>
                                <item name="label" xsi:type="string" translate="true">CSV</item>
                            </item>
                        </argument>
                    </arguments>
                </block>
                <block class="Amasty\Finder\Block\Adminhtml\Finder\Edit\Tab\Products\Grid\ColumnSet" as="grid.columnSet" name="adminhtml.amasty.finder.grid.columnSet">
                    <arguments>
                        <argument name="rowUrl" xsi:type="array">
                            <item name="path" xsi:type="string">*/value/edit</item>
                            <item name="extraParamsTemplate" xsi:type="array">
                                <item name="id" xsi:type="string">getVid</item>
                                <item name="finder_id" xsi:type="string">getFinderId</item>
                            </item>
                        </argument>
                    </arguments>
                </block>
            </block>
        </referenceBlock>
    </body>
</page>
